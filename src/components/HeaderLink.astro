---
interface Props {
    text: string,
    link: string,
    className?: string,
    targetBlank?: boolean
}

const { text, link, className, targetBlank } = Astro.props;
---
<a class:list={[
    className, 
    // " dark:hover:text-blue-600 dark:focus-within:text-blue-600 hover:text-blue-600 focus-within:text-blue-600 duration-150"
    "text-indigo-400 hover:border-b-2 border-blue-800 transition-all duration-75 text-2xl inline-block align-center"
    ]} 
    href={link}
    target={targetBlank? '_blank' : '_self'}>
    { text }
</a>