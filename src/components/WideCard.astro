---
import Tag from "./Tag.astro";

const { frontmatter, url } = Astro.props;
---
<div class="flex flex-auto flex-grow-0 m-4 shadow-lg border-2 dark:border-zinc-800 dark:hover:bg-zinc-800 dark:hover:border-zinc-700 transition-all duration-75 hover:shadow-2xl">
    <img class="w-48 h-48 object-cover" src={frontmatter.image.url} alt={frontmatter.image.alt}/>
    <div>
        <h3 class="text-indigo-400 text-xl truncate px-1">
            <!-- Title gets truncated -->
            {frontmatter.title}
        </h3>
        <div class="py-1 flex">
            {frontmatter.tags.slice(0, 3).map((tag: string) => <Tag tag={tag} small/>)}
        </div>
        <div class="flex border-b-2 border-blue-600 px-1">
        </div>
        <p class="dark:text-indigo-100 line-clamp-5 min-h-[4.5rem] px-1">
            <!-- Shows the first 5 lines of the description -->
            {frontmatter.description}
        </p>
        <div class="text-right">
            <a class="group dark:text-white py-2 px-1" href={url}>Read <span class="text-indigo-400 group-hover:border-b-2 border-blue-800 transition-all duration-75">More</span>...</a>
        </div>
    </div>
    
</div>