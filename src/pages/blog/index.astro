---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCardCollection from "../../components/PostCardCollection.astro";
import WideCardCollection from "../../components/WideCardCollection.astro";

const posts = await Astro.glob('./posts/*.md');
---

<BaseLayout title="Bailey - Blog">
    <p class="py-4"> </p>
    <h2 class="text-blue-600 text-4xl text-center">Blog</h2>
    <div class="flex justify-center">
        <WideCardCollection {posts} />
    </div>
</BaseLayout>